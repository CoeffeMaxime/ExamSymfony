{% extends 'front/base.html.twig' %}

{% block title %}
<title>Model index</title>
{% endblock %}

{% block body %}
    <h1>Model index</h1>

    <table class="table table-dark table-striped ">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for model in models %}
            <tr>
                <td>{{ model.id }}</td>
                <td>{{ model.name }}</td>
                <td>
                    <a href="{{ path('app_model_show', {'id': model.id}) }}">show</a>
                    <a href="{{ path('app_model_edit', {'id': model.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation d-flex justify-content-center mt-2">
        {{ knp_pagination_render(models) }}
    </div>
    <a href="{{ path('app_model_new') }}">Create new</a>
{% endblock %}
